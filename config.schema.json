{
  "type": "object",
  "properties": {
    "port": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535,
      "default": 8080
    },
    "syncInterval": {
      "type": "string",
      "default": "10m"
    },
    "logfile": {
      "type": "string",
      "default": "logs/gitlab-sync.log"
    },
    "gitlab": {
      "id": "/gitlab",
      "type": "object",
      "properties": {
        "api": {
          "type": "string"
        },
        "privateToken": {
          "type": "string"
        },
        "requestTimeout": {
          "type": "integer",
          "default": 5000
        }
      },
      "required": [
        "api",
        "privateToken"
      ]
    },
    "ldap": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "baseDN": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "groupPrefix": {
          "type": "string",
          "default": "gitlab-"
        },
        "adminGroup": {
          "type": "string",
          "default": "admins"
        },
        "maintainerGroup": {
          "type": "string",
          "default": "maintainer"
        },
        "reporterGroup": {
          "type": "string",
          "default": "reporter"
        }
      },
      "required": [
        "url",
        "baseDN",
        "username",
        "password"
      ]
    }
  }
}
